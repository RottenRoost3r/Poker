<head>
    <link rel="stylesheet" type="text/css" href="/css/poker.css">
    <script src="js/poker.js" type="text/javascript"></script>

    <audio id="audio1">
        <source src="/audio/stranger1.mp3" type="audio/mp3">
    </audio>

    <audio id="audio2">
        <source src="/audio/stranger2.mp3" type="audio/mp3">
    </audio>


    <a href='/'>Play Again</a>
    <button type="button" id="showbutton" onclick="bigReveal()">Click to Reveal Winner</button>
</head>

<body >

<form method="post" action="poker">

<div class="glow" name="winner" id="winner">
    
    <%game = Rules.new%>
    <%=y = game.play_game()%>
    
    <%if y == "Black Wins"%>
       <br> <%=game.how_they_win(game.black)%>
    <%elsif y == "White Wins"%>
       <br> <%=game.how_they_win(game.white)%>
    <%end%>

</div>


<div class="black_hand" name="black_hand">
    <h3>BLACK</h3>
    <%game.black.hand.each do |v|%>
    <%=v.card_name%>
        <%if v.card_name == "AD"%>
        
            <img width="125" height="178" src=/images/Ace_of_Diamonds.jpg>
        <%else%>
        <img width="125" height="178" src="/images/<%=v.card_name%>.jpg">
        <%end%>
    <%end%>
</div>

<div class="white_hand" name="white_hand">
    <h3>WHITE</h3>
    <%game.white.hand.each do |v|%> 
    <%=v.card_name%>
       <%if v.card_name == "AD"%>
            <img width="125" height="178" src=/images/Ace_of_Diamonds.jpg>
        <%else%>
        <img width="125" height="178" src="/images/<%=v.card_name%>.jpg">
        <%end%>
    <%end%>
</div>


</form>
</body>
