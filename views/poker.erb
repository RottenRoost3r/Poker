<head>
    <link rel="stylesheet" type="text/css" href="/css/poker.css">
    <script src="/js/poker.js" type="text/javascript"></script>
</head>

<body>
<form method="post" action="poker">
<div class="winner" name="winner">
    <%game = Rules.new%>
    <%=game.play_game()%>
</div>

<div class="black_hand" name="black_hand">
    <h3>BLACK</h3>
    <%game.black.hand.each do |v|%>
        <%=v.card_name%>
        <% if v.card_name == "2H"%>
        <img src=/images/2H.jpg>
        <% elsif v.card_name == "2D"%>
        <img src=/images/2D.jpg>
        <% elsif v.card_name == "2C"%>
        <img src=/images/2C.jpg>
        <% elsif v.card_name == "2S"%>
        <img src=/images/2S.jpg>
        <%end%>
        <%=" "%>
    <%end%>
</div>

<div class="white_hand" name="white_hand">
    <h3>WHITE</h3>
    <%game.white.hand.each do |v|%> 
        <%=v.card_name%>
        <%=" "%>
    <%end%>
</div>



</form>

</body>